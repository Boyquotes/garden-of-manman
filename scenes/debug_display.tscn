script/source = "extends Label3D
var content:={}

func _init() -> void:
	name = 'debug_display'

func _ready() -> void:
	if !OS.is_debug_build():
		queue_free()
		return

func set_content(key,value):
	if content.has(key):
		if content[key] == value: return
	content[key] = value
	refresh_text()

func refresh_text():
	var keys = content.keys()
	var values = content.values()
	var iterations = content.size()
	var output:=''
	for i in iterations:
		output += keys[i]
		output += ': '
		output += str(values[i])
		output += '\\n'
	text = output
"

