script/source = "extends Label3D
var content:={}:
	get:
		return content
	set(value):
		if value == content: return
		content = value
		refresh_text()

func _ready() -> void:
	if !OS.is_debug_build():
		queue_free()
		return
	refresh_text()

func refresh_text():
	var keys = content.keys()
	var values = content.values()
	var output:=''
	for i in content.size():
		output += keys[i]
		output += ': '
		output += str(values[i])
		output += '\\n'
	text = output
"

